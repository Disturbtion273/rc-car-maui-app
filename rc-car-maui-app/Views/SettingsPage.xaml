<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:rc_car_maui_app.Controls"
             xmlns:togglewitch="clr-namespace:rc_car_maui_app.Controls.ToggleSwitch"
             x:Class="rc_car_maui_app.Views.SettingsPage">
    <ScrollView>
        <VerticalStackLayout Padding="20">
            
            <Label Text="Driving related settings" 
                   HorizontalTextAlignment="Center"/>
            <BoxView HeightRequest="1"
                     Color="{StaticResource PrimaryText}"
                     Opacity="0.35"
                     HorizontalOptions="Fill"
                     Margin="20,8" />
            <Border BackgroundColor="#018076">
                <VerticalStackLayout>
                    
                    <Grid ColumnDefinitions="Auto, *" VerticalOptions="Center">
                        <Label Text="Speed Unit:" 
                               Style="{StaticResource CardTitleLabel}"
                               VerticalTextAlignment="Center"/>
                        
                        <togglewitch:ToggleSwitch
                            OnText="KM/H"
                            OffText="MP/H"
                            IsToggled="True"
                            Padding="12"
                            Grid.Column="1"/>
                    </Grid>
                    
                    <Grid ColumnDefinitions="Auto, *" VerticalOptions="Fill">
                        <Label Text="Speed Unit:" 
                               Style="{StaticResource CardTitleLabel}"
                               VerticalTextAlignment="Center"/>
                        
                        <togglewitch:ToggleSwitch
                            OnText=""
                            OffText=""
                            IsToggled="True"
                            Padding="12"
                            Grid.Column="1"/>
                    </Grid>
                    
                </VerticalStackLayout> 
            </Border>
            
            <Label Text="App related settings" 
                   HorizontalTextAlignment="Center"/>
            <BoxView HeightRequest="1"
                     Color="{StaticResource PrimaryText}"
                     Opacity="0.35"
                     HorizontalOptions="Fill"
                     Margin="20,8" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
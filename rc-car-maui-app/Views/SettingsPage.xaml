<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:customSwitch="clr-namespace:rc_car_maui_app.Controls.CustomSwitch"
             xmlns:labelSwitch="clr-namespace:rc_car_maui_app.Controls.LabelSwitch"
             x:Class="rc_car_maui_app.Views.SettingsPage">
    <ScrollView>
        <VerticalStackLayout Padding="32">
            
            <Label Text="Driving related settings"
                   FontSize="20"
                   HorizontalTextAlignment="Center"/>
            <BoxView HeightRequest="1"
                     Color="{StaticResource PrimaryText}"
                     HorizontalOptions="Fill"
                     Margin="0,8, 0, 16" />
            <Border BackgroundColor="#018076"
                    StrokeShape="RoundRectangle 12">
                <VerticalStackLayout>
                    
                    <Grid ColumnDefinitions="Auto, *" VerticalOptions="Fill" Padding="20, 15">
                        <Label Text="Speed Unit:" 
                               Style="{StaticResource CardTitleLabel}"
                               VerticalTextAlignment="Center"
                               Grid.Column="0"/>
                        
                        <labelSwitch:LabelSwitch
                            WidthRequest="100"
                            HeightRequest="30"
                            LeftText="KM/H"
                            RightText="MP/H"
                            TrackColor="#00514a"
                            CapsuleColor="#05bfb5"
                            TextColor="#002c28"
                            IsLeftSelected="True"
                            HorizontalOptions="End"
                            Grid.Column="1"/>
                    </Grid>
                    
                    <BoxView HeightRequest="1"
                             Color="#00514a"
                             Opacity="0.35"
                             HorizontalOptions="Fill"/>
                    
                    <Grid ColumnDefinitions="Auto, *" VerticalOptions="Fill" Padding="20, 15">
                        <Label Text="Show Battery:" 
                               Style="{StaticResource CardTitleLabel}"
                               VerticalTextAlignment="Center"
                               Grid.Column="0"/>
                        
                        <customSwitch:CustomSwitch
                            IsToggled="True"
                            HorizontalOptions="End"
                            Grid.Column="1"/>
                    </Grid>
                    
                    <BoxView HeightRequest="1"
                             Color="#00514a"
                             Opacity="0.35"
                             HorizontalOptions="Fill"/>
                    
                    <Grid ColumnDefinitions="Auto, *" VerticalOptions="Fill" Padding="20, 15">
                        <Label Text="Speed Unit:" 
                               Style="{StaticResource CardTitleLabel}"
                               VerticalTextAlignment="Center"
                               Grid.Column="0"/>
                        
                        <customSwitch:CustomSwitch
                            IsToggled="True"
                            HorizontalOptions="End"
                            Grid.Column="1"/>
                    </Grid>
                    
                </VerticalStackLayout> 
            </Border>
            
            <Label Text="App related settings"
                   FontSize="20"
                   Padding="0, 24, 0, 0"
                   HorizontalTextAlignment="Center"/>
            <BoxView HeightRequest="1"
                     Color="{StaticResource PrimaryText}"
                     HorizontalOptions="Fill"
                     Margin="0,8, 0, 16" />
            <Border BackgroundColor="#018076"
                    StrokeShape="RoundRectangle 12">
                <VerticalStackLayout>
                    
                    <Grid ColumnDefinitions="Auto, *" VerticalOptions="Fill" Padding="20, 15">
                        <Label Text="Language:" 
                               Style="{StaticResource CardTitleLabel}"
                               VerticalTextAlignment="Center"
                               Grid.Column="0"/>
                        
                        <labelSwitch:LabelSwitch
                            WidthRequest="100"
                            HeightRequest="30"
                            LeftText="DE"
                            RightText="EN"
                            TrackColor="#00514a"
                            CapsuleColor="#05bfb5"
                            TextColor="#002c28"
                            IsLeftSelected="True"
                            HorizontalOptions="End"
                            Grid.Column="1"/>
                    </Grid>
                    
                    <BoxView HeightRequest="1"
                             Color="#00514a"
                             Opacity="0.35"
                             HorizontalOptions="Fill"/>
                    
                    <Grid ColumnDefinitions="Auto, *" VerticalOptions="Fill" Padding="20, 15">
                        <Label Text="Dark Mode:" 
                               Style="{StaticResource CardTitleLabel}"
                               VerticalTextAlignment="Center"
                               Grid.Column="0"/>
                        
                        <customSwitch:CustomSwitch
                            IsToggled="True"
                            HorizontalOptions="End"
                            Grid.Column="1"/>
                    </Grid>
                    
                </VerticalStackLayout> 
            </Border>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
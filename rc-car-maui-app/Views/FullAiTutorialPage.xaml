<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="rc_car_maui_app.Views.FullAiTutorialPage"
             xmlns:loc="clr-namespace:rc_car_maui_app.Helpers"
             BackgroundColor="#80000000">
    <Grid>
        <Border
            Padding="16"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            WidthRequest="350"
            Style="{StaticResource SettingCard}"
            StrokeShape = "RoundRectangle 12">
            
            <VerticalStackLayout>
                <Label Text="{loc:Translate Full-AI Mode}"
                       Style="{StaticResource SettingCardLabel}"
                       HorizontalOptions="Center"/>
                
                <Label 
                    Text="{loc:Translate Full-AI description}"
                    TextColor="{AppThemeBinding Light={StaticResource PrimaryText}, Dark={StaticResource SecondaryText}}"
                    LineBreakMode="WordWrap"/>
                
                <Button
                    Text="Close"
                    FontFamily="RajdhaniSemiBold"
                    HorizontalOptions="Center"
                    Clicked="BackButton" />
            </VerticalStackLayout>
            
        </Border>
    </Grid>
</ContentPage>
<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="rc_car_maui_app.Views.DrivingPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" 
                             Spacing="30" 
                             VerticalOptions="Center">
            
            <!-- Card 1 -->
            <Border StrokeShape="RoundRectangle 12"
                    Padding="16"
                    BackgroundColor="{AppThemeBinding Light={StaticResource SecondaryDark}, Dark={StaticResource Tertiary}}">
                <HorizontalStackLayout Spacing="8" HorizontalOptions="Fill">
                    <VerticalStackLayout Spacing="4" VerticalOptions="Start">
                        <Label Text="Manual"
                               FontAttributes="Bold"
                               FontSize="18"
                               TextColor="{AppThemeBinding Light={StaticResource PrimaryText}, Dark={StaticResource SecondaryText}}" />
                        <Label Text="Give you full control to the car"
                               FontSize="14"
                               TextColor="{AppThemeBinding Light={StaticResource PrimaryText}, Dark={StaticResource SecondaryText}}" />
                    </VerticalStackLayout>
                    <ImageButton Source="play.svg"
                                 BackgroundColor="Transparent"
                                 Clicked="DrivingOne"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center" />
                </HorizontalStackLayout>
            </Border>
                
            <!-- Card 2 -->
            <Border StrokeShape="RoundRectangle 12"
                    Padding="16">
                <HorizontalStackLayout Spacing="8">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Card2" />
                        <Label Text="A very long description about Card2" />
                    </VerticalStackLayout>
                    <Button Text="Play2"
                            Clicked="DrivingTwo" />
                </HorizontalStackLayout>
            </Border>
            
            <!-- Card 3 -->
            <Border StrokeShape="RoundRectangle 12"
                    Padding="16">
                <HorizontalStackLayout Spacing="8">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Card3" />
                        <Label Text="A very long description about Card3" />
                    </VerticalStackLayout>
                    <Button Text="Play3"
                            Clicked="DrivingThree" />
                </HorizontalStackLayout>
            </Border>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
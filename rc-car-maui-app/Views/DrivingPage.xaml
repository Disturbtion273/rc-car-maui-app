<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:loc="clr-namespace:rc_car_maui_app.Helpers"
             x:Class="rc_car_maui_app.Views.DrivingPage">
    
    <Shell.TitleView>
        <Grid HorizontalOptions="Fill" VerticalOptions="Fill">
            <Label
                Text="Driving"
                Style="{StaticResource CustomTitleLabel}" />
        </Grid>
    </Shell.TitleView>
    
    <ScrollView>
        <VerticalStackLayout Padding="20" 
                             Spacing="40" 
                             VerticalOptions="Center">
            
            <!-- Card 1 -->
            <Border Style="{StaticResource CardStyle}">
                <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto">
                    <VerticalStackLayout Spacing="2" VerticalOptions="Start" Grid.Column="0">
                        <HorizontalStackLayout Spacing="1" VerticalOptions="Center">
                            <Label Text="{loc:Translate Manual}" 
                                   Style="{StaticResource CardTitleLabel}"/>
                            <ImageButton 
                                BackgroundColor="Transparent" 
                                Padding="12"
                                WidthRequest="5"
                                TranslationY="-7"
                                Source="{AppThemeBinding Light=tutorial_light, Dark=tutorial_dark}" />
                                <!-- Clicked="ManualDriving" /> -->
                        </HorizontalStackLayout>
                        <Label Text="{loc:Translate ManualSubtitle}" 
                               Style="{StaticResource CardSubtitleLabel}" />
                    </VerticalStackLayout>
                    <ImageButton 
                        BackgroundColor="Transparent" 
                        Padding="0"
                        Source="{AppThemeBinding Light=play_light, Dark=play_dark}"
                        Clicked="ManualDriving"
                        Grid.Column="1" />
                </Grid>
            </Border>
                
            <!-- Card 2 -->
            <Border Style="{StaticResource CardStyle}">
                <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto">
                    <VerticalStackLayout Spacing="2" VerticalOptions="Start" Grid.Column="0">
                        <HorizontalStackLayout Spacing="1" VerticalOptions="Center">
                            <Label Text="{loc:Translate Semi-Ai}" 
                                   Style="{StaticResource CardTitleLabel}"/>
                            <ImageButton 
                                BackgroundColor="Transparent" 
                                Padding="12"
                                WidthRequest="5"
                                TranslationY="-7"
                                Source="{AppThemeBinding Light=tutorial_light, Dark=tutorial_dark}" />
                            <!-- Clicked="ManualDriving" /> -->
                        </HorizontalStackLayout>
                        <Label Text="{loc:Translate SemiSubtitle}" 
                               Style="{StaticResource CardSubtitleLabel}"/>
                    </VerticalStackLayout>
                    <ImageButton 
                        BackgroundColor="Transparent" 
                        Padding="0"
                        Source="{AppThemeBinding Light=play_light, Dark=play_dark}"
                        Clicked="SemiAutomaticDriving"
                        Grid.Column="1" />
                </Grid>
            </Border>
            
            <!-- Card 3 -->
            <Border Style="{StaticResource CardStyle}">
                <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto">
                    <VerticalStackLayout Spacing="2" VerticalOptions="Start" Grid.Column="0">
                        <HorizontalStackLayout Spacing="1" VerticalOptions="Center">
                            <Label Text="{loc:Translate Full-Ai}" 
                                   Style="{StaticResource CardTitleLabel}"/>
                            <ImageButton 
                                BackgroundColor="Transparent" 
                                Padding="12"
                                WidthRequest="5"
                                TranslationY="-7"
                                Source="{AppThemeBinding Light=tutorial_light, Dark=tutorial_dark}" />
                            <!-- Clicked="ManualDriving" /> -->
                        </HorizontalStackLayout>
                        <Label Text="{loc:Translate FullSubtitle}" 
                               Style="{StaticResource CardSubtitleLabel}"/>
                    </VerticalStackLayout>
                    <ImageButton 
                        BackgroundColor="Transparent" 
                        Padding="0"
                        Source="{AppThemeBinding Light=play_light, Dark=play_dark}"
                        Clicked="DrivingThree"
                        Grid.Column="1" />
                </Grid>
            </Border>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="rc_car_maui_app.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:rc_car_maui_app.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="rc_car_maui_app">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />
    <ShellContent 
        Title="Car Control"
        ContentTemplate="{DataTemplate views:CarControlPage}"
        Route="CarControlPage" />
    <ShellContent 
        Title="Settings" 
        ContentTemplate="{DataTemplate views:SettingPage}"
        Route="SettingsPage" />

</Shell>

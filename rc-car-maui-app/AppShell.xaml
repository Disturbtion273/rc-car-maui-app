<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="rc_car_maui_app.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:rc_car_maui_app.Views"
    xmlns:loc="clr-namespace:rc_car_maui_app.Helpers"

    Title="rc_car_maui_app">

    <TabBar>
        <Tab Title="{loc:Translate Driving}" Icon="steering_wheel">
            <ShellContent
                Title="{loc:Translate Driving Modes}"
                ContentTemplate="{DataTemplate views:DrivingModesPage}"
                Route="DrivingPage" />
        </Tab>
        <Tab Title="{loc:Translate Home}" Icon="home">
            <ShellContent
                x:Name="HomeTab"
                Title="{loc:Translate Home}"
                ContentTemplate="{DataTemplate views:MainPage}"
                Route="DrivingPage" />
        </Tab>
        <Tab Title="{loc:Translate Settings}" Icon="settings">
            <ShellContent
                Title="{loc:Translate Settings}"
                ContentTemplate="{DataTemplate views:SettingsPage}"
                Route="SettingsPage" />
        </Tab>
    </TabBar>

</Shell>
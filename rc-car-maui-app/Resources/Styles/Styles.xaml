    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource OffBlack}}" />
    </Style>

    <Style TargetType="Grid" Class="ColoredGrid">
        <Setter Property="BackgroundColor"
                Value="{AppThemeBinding Light={StaticResource BackgroundBase}, Dark={StaticResource BackgroundBaseDark}}" />
    </Style>

    <Style TargetType="Shell" ApplyToDerivedTypes="True">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource BackgroundBase}, Dark={StaticResource BackgroundBaseDark}}" />
        <Setter Property="ForegroundColor" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
        <Setter Property="TitleColor" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Tertiary}}" />
        <Setter Property="UnselectedColor" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray200}}" />
        <Setter Property="NavBarHasShadow" Value="False" />
        <Setter Property="TabBarBackgroundColor" Value="{AppThemeBinding Light={StaticResource BackgroundBase}, Dark={StaticResource BackgroundBaseDark}}" />
        <Setter Property="TabBarTitleColor" Value="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource Tertiary}}" />
        <Setter Property="TabBarForegroundColor" Value="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource Tertiary}}" />
        <Setter Property="TabBarUnselectedColor" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
    </Style>
    
    <Style x:Key="CustomTitleLabel" TargetType="Label">
        <Setter Property="FontFamily" Value="RajdhaniSemiBold" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
        <Setter Property="TextColor" 
                Value="{AppThemeBinding Light={StaticResource LsSelTextL}, Dark={StaticResource Tertiary}}" />
    </Style>

    <Style TargetType="NavigationPage">
        <Setter Property="BarBackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource OffBlack}}" />
        <Setter Property="BarTextColor" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource White}}" />
        <Setter Property="IconColor" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource White}}" />
    </Style>

    <Style TargetType="TabbedPage">
        <Setter Property="BarBackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray950}}" />
        <Setter Property="BarTextColor" Value="{AppThemeBinding Light={StaticResource Magenta}, Dark={StaticResource White}}" />
        <Setter Property="UnselectedTabColor" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray950}}" />
        <Setter Property="SelectedTabColor" Value="{AppThemeBinding Light={StaticResource Gray950}, Dark={StaticResource Gray200}}" />
    </Style>
    
    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="12" />
            </Setter.Value>
        </Setter>
        <Setter Property="Padding" Value="20,35" />
        <Setter Property="BackgroundColor"
                Value="{AppThemeBinding Light={StaticResource SecondaryDark}, Dark={StaticResource Tertiary}}" />
    </Style>

    
    <Style x:Key="CardTitleLabel" TargetType="Label">
        <Setter Property="FontFamily" Value="RajdhaniSemiBold" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource PrimaryText}, Dark={StaticResource SecondaryText}}" />
    </Style>

    <Style x:Key="CardSubtitleLabel" TargetType="Label">
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource PrimaryText}, Dark={StaticResource SecondaryText}}" />
    </Style>
    
    <!-- Setting Page Custom Color -->
    <Style x:Key="LineDivide" TargetType="BoxView">
        <Setter Property="Color"
                Value="{AppThemeBinding 
                Light={StaticResource Black}, 
                Dark={StaticResource White}}" />
    </Style>
    
    <Style x:Key="SettingCard" TargetType="Border">
        <Setter Property="BackgroundColor"
                Value="{AppThemeBinding 
                Light={StaticResource SecondaryDark}, 
                Dark={StaticResource Tertiary}}" />
    </Style>
    
    <Style x:Key="SettingLabel" TargetType="Label">
        <Setter Property="FontFamily" Value="RajdhaniSemiBold" />
        <Setter Property="FontSize" Value="22" />
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource SecondaryText}, Dark={StaticResource PrimaryText}}" />
    </Style>
    
    <Style x:Key="SettingCardLabel" TargetType="Label">
        <Setter Property="FontFamily" Value="RajdhaniSemiBold" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource PrimaryText}, Dark={StaticResource SecondaryText}}" />
    </Style>
    
    <Style x:Key="LabelSwitchColor" TargetType="labelSwitch:LabelSwitch">
        <Setter Property="TrackColor"
                Value="{AppThemeBinding 
                Light={StaticResource LsTrackL}, 
                Dark={StaticResource LsTrackD}}" />
        <Setter Property="CapsuleColor"
                Value="{AppThemeBinding 
                Light={StaticResource LsCapsuleL}, 
                Dark={StaticResource LsCapsuleD}}" />
        <Setter Property="SelectedTextColor"
                Value="{AppThemeBinding 
                Light={StaticResource LsSelTextL}, 
                Dark={StaticResource LsSelTextD}}" />
        <Setter Property="UnselectedTextColor"
                Value="{AppThemeBinding 
                Light={StaticResource LsUnselTextL}, 
                Dark={StaticResource LsUnselTextD}}" />
    </Style>
    
    <Style x:Key="CustomSwitchColor" TargetType="customSwitch:CustomSwitch">
        <Setter Property="TrackColorOn"
                Value="{AppThemeBinding 
                Light={StaticResource CsTrackOnL}, 
                Dark={StaticResource CsTrackOnD}}" />
        <Setter Property="CapsuleColorOn"
                Value="{AppThemeBinding 
                Light={StaticResource CsCapsuleOnL}, 
                Dark={StaticResource CsCapsuleOnD}}" />
        <Setter Property="TrackColorOff"
                Value="{AppThemeBinding 
                Light={StaticResource CsTrackOffL}, 
                Dark={StaticResource CsTrackOffD}}" />
        <Setter Property="CapsuleColorOff"
                Value="{AppThemeBinding 
                Light={StaticResource CsCapsuleOffL}, 
                Dark={StaticResource CsCapsuleOffD}}" />
    </Style>
    
    <Style x:Key="CustomPickerColor" TargetType="customPicker:CustomPicker">
        <Setter Property="TrackColor"
                Value="{AppThemeBinding 
                Light={StaticResource CpTrackL}, 
                Dark={StaticResource CpTrackD}}" />
        <Setter Property="TextColor"
                Value="{AppThemeBinding 
                Light={StaticResource CpTextL}, 
                Dark={StaticResource CpTextD}}" />
        <Setter Property="PickerIconColor"
                Value="{AppThemeBinding 
                Light={StaticResource CpPickerL}, 
                Dark={StaticResource CpPickerD}}" />
    </Style>

</ResourceDictionary>

<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:rc_car_maui_app.Controls"
             x:Class="rc_car_maui_app.Controls.BatteryIndicator">
    
    <controls:OverlayBackground HeightRequest="26"
                                Padding="8, 0" >

        <HorizontalStackLayout HorizontalOptions="Center"
                               VerticalOptions="Center"
                               Spacing="7">

            <Label x:Name="BatteryLabel" 
                   TextColor="White"
                   VerticalOptions="Center" />
                        
            <Grid>
                <Border x:Name="BatteryBackground" 
                        StrokeShape="Rectangle" 
                        StrokeThickness="0"
                        BackgroundColor="{StaticResource Green}"
                        HeightRequest="12"
                        HorizontalOptions="Start"
                        Margin="2, 0, 0, 0"/>
                            
                <Image Source="battery"
                       WidthRequest="24"
                       HeightRequest="24" />
            </Grid>
        </HorizontalStackLayout>
    </controls:OverlayBackground>
</ContentView>